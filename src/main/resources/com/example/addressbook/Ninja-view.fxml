<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>


<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.addressbook.NinjaController"
      alignment="CENTER" spacing="15"
      style="-fx-background-color: #140B38;">

    <!-- App title -->
    <Label text="TYPING NINJA" style="-fx-font-size: 36px; -fx-text-fill: white;"/>

    <!-- Logo image -->
    <ImageView fitHeight="2000" fitWidth="1200" pickOnBounds="true" preserveRatio="true">
        <image>
            <Image url="@Typing Ninja.png"/> <!-- put ninja.png in resources -->
        </image>
    </ImageView>

    <!-- Menu buttons -->
    <VBox alignment="CENTER" spacing="10">
        <Button text="LOG IN" fx:id="loginButton" onAction="#onloginClicked"/>
        <Button text="CREATE ACCOUNT" fx:id="createAccountButton" onAction="#onCreateAccountClicked"/>
        <Button text="HELP" fx:id="helpButton" onAction="#onHelpClicked"/>
    </VBox>

</VBox>
