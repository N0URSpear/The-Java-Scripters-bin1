<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.addressbook.EditUserDialogController"
      spacing="15" alignment="CENTER"
      style="-fx-background-color: #DDDDDD; -fx-padding: 20; -fx-background-radius: 15;"
      prefWidth="500" prefHeight="400">

    <Label text="Edit User" style="-fx-font-size: 24px; -fx-font-weight: bold;" />

    <HBox spacing="10">
        <Label text="Username:"/>
        <TextField fx:id="usernameField"/>
    </HBox>

    <HBox spacing="10">
        <Label text="Password:"/>
        <PasswordField fx:id="passwordField"/>
    </HBox>

    <HBox spacing="10">
        <Label text="Secret Q1:"/>
        <ComboBox fx:id="q1Box" prefWidth="200"/>
        <TextField fx:id="answer1Field"/>
    </HBox>

    <HBox spacing="10">
        <Label text="Secret Q2:"/>
        <ComboBox fx:id="q2Box" prefWidth="200"/>
        <TextField fx:id="answer2Field"/>
    </HBox>

    <HBox spacing="20">
        <Button text="Save" onAction="#onSaveClicked"/>
        <Button text="Cancel" onAction="#onCancelClicked"/>
    </HBox>
</VBox>
