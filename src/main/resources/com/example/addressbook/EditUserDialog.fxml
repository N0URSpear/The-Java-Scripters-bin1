<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.addressbook.controllers.EditUserDialogController"
            style="-fx-background-color: rgba(0,0,0,0.6);">

    <!-- 面板主体（灰底圆角卡片） -->
    <center>
        <StackPane>
            <StackPane.margin>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </StackPane.margin>

            <GridPane hgap="18" vgap="18"
                      alignment="CENTER"
                      style="-fx-background-color: #DDDDDD; -fx-background-radius: 18; -fx-padding: 24;">
                <columnConstraints>
                    <!-- 左列标签 -->
                    <ColumnConstraints minWidth="180" halignment="LEFT"/>
                    <!-- 中列内容 -->
                    <ColumnConstraints hgrow="ALWAYS"/>
                    <!-- 右列图标 -->
                    <ColumnConstraints minWidth="40" halignment="LEFT"/>
                </columnConstraints>

                <!-- 标题 + Back -->
                <Label text="Edit User"
                       style="-fx-font-family: 'Jaro'; -fx-font-size: 30; -fx-font-weight: bold;"
                       GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="3"
                       GridPane.halignment="CENTER"/>
                <Button fx:id="backBtn" text="Back"
                        style="-fx-background-color: #39ff14; -fx-text-fill: #000; -fx-font-weight: bold;
                   -fx-background-radius: 12; -fx-padding: 6 16;"
                        GridPane.rowIndex="0" GridPane.columnIndex="2"
                        GridPane.halignment="RIGHT"/>

                <!-- Username -->
                <Label text="Username:"
                       style="-fx-font-family: 'Jaro'; -fx-font-size: 22;"
                       GridPane.rowIndex="1" GridPane.columnIndex="0" GridPane.halignment="LEFT"/>
                <StackPane GridPane.rowIndex="1" GridPane.columnIndex="1">
                    <Label fx:id="usernameValueLabel" />
                    <TextField fx:id="usernameField" visible="false" managed="false"/>
                </StackPane>
                <Button fx:id="editUsernameBtn" style="-fx-background-color: transparent;"
                        GridPane.rowIndex="1" GridPane.columnIndex="2" GridPane.halignment="LEFT">
                    <graphic>
                        <ImageView fitWidth="22" fitHeight="22" preserveRatio="true">
                            <Image url="@pencil-write-tool-icon.png"/>
                        </ImageView>
                    </graphic>
                </Button>

                <!-- Password -->
                <Label text="Password:"
                       style="-fx-font-family: 'Jaro'; -fx-font-size: 22;"
                       GridPane.rowIndex="2" GridPane.columnIndex="0" GridPane.halignment="LEFT"/>
                <StackPane GridPane.rowIndex="2" GridPane.columnIndex="1">
                    <Label fx:id="passwordMask" text="********"/>
                    <TextField fx:id="passwordVisibleField" visible="false" managed="false"/>
                </StackPane>
                <Button fx:id="editPasswordBtn" style="-fx-background-color: transparent;"
                        GridPane.rowIndex="2" GridPane.columnIndex="2" GridPane.halignment="LEFT">
                    <graphic>
                        <ImageView fitWidth="22" fitHeight="22" preserveRatio="true">
                            <Image url="@pencil-write-tool-icon.png"/>
                        </ImageView>
                    </graphic>
                </Button>

                <!-- Secret Questions -->
                <Label text="Secret Questions:"
                       style="-fx-font-family: 'Jaro'; -fx-font-size: 22; -fx-font-weight: bold;"
                       GridPane.rowIndex="3" GridPane.columnIndex="0" GridPane.columnSpan="3"
                       GridPane.halignment="LEFT"/>

                <!-- Secret Q1 -->
                <ComboBox fx:id="secretQ1ComboBox"
                          GridPane.rowIndex="4" GridPane.columnIndex="0"
                          GridPane.columnSpan="1" GridPane.halignment="LEFT"/>
                <StackPane GridPane.rowIndex="4" GridPane.columnIndex="1">
                    <Label fx:id="secretQ1Mask" text="********"/>
                    <TextField fx:id="secretQ1VisibleField" visible="false" managed="false"/>
                </StackPane>
                <Button fx:id="editAnswer1Btn" style="-fx-background-color: transparent;"
                        GridPane.rowIndex="4" GridPane.columnIndex="2" GridPane.halignment="LEFT">
                    <graphic>
                        <ImageView fitWidth="22" fitHeight="22" preserveRatio="true">
                            <Image url="@pencil-write-tool-icon.png"/>
                        </ImageView>
                    </graphic>
                </Button>

                <!-- Secret Q2 -->
                <ComboBox fx:id="secretQ2ComboBox"
                          GridPane.rowIndex="5" GridPane.columnIndex="0"
                          GridPane.columnSpan="1" GridPane.halignment="LEFT"/>
                <StackPane GridPane.rowIndex="5" GridPane.columnIndex="1">
                    <Label fx:id="secretQ2Mask" text="********"/>
                    <TextField fx:id="secretQ2VisibleField" visible="false" managed="false"/>
                </StackPane>
                <Button fx:id="editAnswer2Btn" style="-fx-background-color: transparent;"
                        GridPane.rowIndex="5" GridPane.columnIndex="2" GridPane.halignment="LEFT">
                    <graphic>
                        <ImageView fitWidth="22" fitHeight="22" preserveRatio="true">
                            <Image url="@pencil-write-tool-icon.png"/>
                        </ImageView>
                    </graphic>
                </Button>

                <!-- Save / Cancel -->
                <HBox spacing="20" alignment="CENTER"
                      GridPane.rowIndex="6" GridPane.columnIndex="0" GridPane.columnSpan="3"
                      GridPane.halignment="CENTER">
                    <Button fx:id="saveBtn" text="Save"
                            style="-fx-background-color: #39ff14; -fx-text-fill: #000; -fx-font-weight: bold;
                       -fx-background-radius: 15; -fx-font-size: 16; -fx-padding: 8 22;"/>
                    <Button fx:id="cancelBtn" text="Cancel"
                            style="-fx-background-color: #F25F5C; -fx-text-fill: white; -fx-font-weight: bold;
                       -fx-background-radius: 15; -fx-font-size: 16; -fx-padding: 8 22;"/>
                </HBox>
            </GridPane>
        </StackPane>
    </center>
</BorderPane>
