<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.addressbook.controllers.FreeTypeSelectController"
      fx:id="root"
      spacing="18" alignment="CENTER"
      style="-fx-background-color: #D9D9D9; -fx-border-color: #2EFF04; -fx-border-width: 3; -fx-background-radius: 15; -fx-border-radius: 15; -fx-padding: 18;">

    <!-- Title -->
    <Label text="Free Type"
           style="-fx-font-family: 'Jaro'; -fx-font-size: 40; -fx-text-fill: black;" />

    <!-- Exercise choice -->
    <Label text="Choose a free typing exercise"
           style="-fx-font-family: 'Inter'; -fx-font-size: 25; -fx-text-fill: black;" />
    <HBox spacing="12" alignment="CENTER">
        <Button text="Practice my weakest key combos" onAction="#pickWeakKeys"
                style="-fx-font-family: 'Jaro'; -fx-font-size: 30;" />
        <Button text="Type anything" onAction="#pickAnything"
                style="-fx-font-family: 'Jaro'; -fx-font-size: 30;" />
    </HBox>

    <!-- Duration -->
    <Label text="For what duration?"
           style="-fx-font-family: 'Inter'; -fx-font-size: 25; -fx-text-fill: black;" />
    <HBox spacing="12" alignment="CENTER">
        <Button text="1 minute"  onAction="#dur1"  style="-fx-font-family: 'Jaro'; -fx-font-size: 30;" />
        <Button text="3 minutes" onAction="#dur3"  style="-fx-font-family: 'Jaro'; -fx-font-size: 30;" />
        <Button text="5 minutes" onAction="#dur5"  style="-fx-font-family: 'Jaro'; -fx-font-size: 30;" />
        <Button text="10 minutes" onAction="#dur10" style="-fx-font-family: 'Jaro'; -fx-font-size: 30;" />
    </HBox>

    <!-- Actions -->
    <HBox spacing="12" alignment="CENTER">
        <Button text="Back" onAction="#handleBack"
                style="-fx-font-family: 'Jaro'; -fx-font-size: 30;" />
        <Button text="Generate and begin lesson" onAction="#handleGenerate"
                style="-fx-font-family: 'Jaro'; -fx-font-size: 30; -fx-background-color: #2EFF04; -fx-text-fill: black; -fx-padding: 6 18 6 18;" />
    </HBox>
</VBox>
